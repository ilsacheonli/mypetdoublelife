<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mypet.doublelifebackend.repository.MemberRepository">

    <resultMap id="memResult" type="memberVO">
        <result property="memNumber" column="m_number" />
        <result property="memName" column="m_name" />
        <result property="memId" column="m_id" />
        <result property="memPwd" column="m_pwd" />
        <result property="memEmail" column="m_email" />
        <result property="memBirth" column="m_birth" />
    </resultMap>

    <!-- memNumber와 일치하는 member 출력 -->
    <select id="selectMemberByNum" parameterType="int" resultMap="memResult">
        SELECT *
        FROM member
        WHERE m_number = #{memNumber}
    </select>

    <!-- member 전체 출력 -->
    <select id="selectAllMembers" resultType="MemberVO">
        SELECT *
        FROM member
    </select>

    <!-- 새로운 member 추가 -->
    <insert id="insertMember" parameterType="MemberVO" >
        INSERT INTO member (m_number, m_name, m_id, m_pwd, m_email)
        VALUES (#{memNumber}, #{memName}, #{memId}, #{memPwd}, #{memEmail})
    </insert>

    <!-- 마지막(가장 큰) memNumber 출력 -->
    <select id="getLastNumber" resultType="int">
        SELECT MAX(m_number)
        FROM member
    </select>


</mapper>